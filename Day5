#include<bits/stdc++.h>
using namespace std;

class Solution{
public :
    void Question1(){
        for(int i=0;i<5;i++){
            for(int j=0;j<5-i-1;j++){
                cout<<" ";
            }
            for(int j=5-i-1;j<5;j++){
                cout<<(char)(j-(5-i-1)+'A');
            }
            for(int j=0;j<i;j++){
               cout<<(char)((i+j+1)+'A');
            }
            cout<<endl;
        }
        for(int i=0;i<5-1;i++){
            for(int j=0;j<i+1;j++){
                cout<<" ";
            }
            for(int j=i+1;j<5;j++){
                cout<<(char)((j-i-1)+'A');
            }
            for(int j=0;j<(5-i-2);j++){
               cout<<(char)((5+i-1)+j+'A');
            } 
            cout<<endl;
        }
    }
    
     bool isPrime(int n) {
        if (n <= 1) {
            return false;
        }
        for (int i = 2; i <= sqrt(n); i++) {
            if (n % i == 0) {
                return false;
            }
        }
        return true;
    }
    
    void Question2(){
      int num = 1;
        cout<<"\n Enter the Number "<<endl;
        cin>>size;
      
       
      for(int i=0;i<size;i++){
        for(int j=0;j<size-i-1;j++){
          cout<<" ";
        }
        for(int j=size-i-1;j<size;j++){
          while (!isPrime(num)) {
                    num++;
            }
                cout<<num;
                num++;
         }
        cout<<endl;
       }
    }  
    
    void Question3(){
      int num ;
      vector<pair<int,int>> ans;
      cout<<"Enter a number "<<endl;
      cin>>num;
      
       if (num % 2 != 0 || num <= 2) {
            cout << "Number can't be expressed as Sum of prime Number" << endl;
            return;
         }
      for (int i = 2; i <= num / 2; i++) {
            if (isPrime(i) && isPrime(num - i)) {
               ans.push_back({i, num - i}); 
            }
        }
    if(ans.size()==0)
     cout << "Number can't be expressed as Sum of prime Number" << endl;
    else{
          for (auto it : ans) {
            cout << it.first << " + " << it.second << endl;
        }
     }
  }

void Question4(){
    int row,column;
    cout<<"Enter the row and column"<<endl;
    cin>>row>>column;
    
    for(int i=0;i<row;i++){
        for(int j=0;j<column;j++){
            cout<<"*";
        }
        cout<<endl;
     }
  }
};


int main(){
    Solution obj;
    obj.Question1();
    obj.Question3();
    obj.Question4();
}
